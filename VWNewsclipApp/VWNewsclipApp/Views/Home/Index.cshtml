
@{
    ViewBag.Title = "Home Page";
}
<html>
<body>



    <div class="container">
        <h2>Car Model Record</h2>
        <label>Make:   </label>
        <select id="models" name="models" onclick="LoadSubModelList()">
        </select>
        <br />
        <label>Model:   </label>
        <select id="submodels" name="submodels" onclick="CombineFunction()">
        </select>
        <br />
        <div id="priceStock">

        </div>i
        <label>List of Features: </label>
        <ul id="features">
        </ul>
    </div>
    <label id="featureAddLabel" hidden>Add Feature:   </label>
    <input type="text" id="featureAdd" placeholder="Eg. Automatic Windows" hidden />
    <br />
    <br />
    <button type="button" id="featureAddBtn" class="btn btn-primary" onclick="InsertFeature()" hidden>Add Feature</button>
    <br />
    <br />
    <button type="button" class="btn btn-primary" onclick="LoadAllList()">View All</button>

    <br />

    <table id="viewAll" class="table table-bordered table-hover" hidden>
        <thead>
            <tr>
                <th>Make</th>
                <th>Model</th>
                <th>Stock</th>
                <th>Price (R)</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody id="tbody"></tbody>
    </table>
    <br />
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Add New Make</button>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal2" onclick="ClearForm()">Add New Model</button>
    <br />

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">x</button>
                    <h4 class="modal-title" id="modalTitle">Add Car</h4>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="lblMakeId">Make</label>
                            <input type="text" class="form-control" id="model_Description" placeholder="Model_Description" />
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btnAddMake" onclick="InsertMake()">Add</button>
                    <button type="button" class="btn btn-default" id="btnClose" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">x</button>
                    <h4 class="modal-title" id="modalTitleAdd">Add Car</h4>
                    <h4 class="modal-title" id="modalTitleUpdate">Update Car</h4>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label>Make</label>
                            <select id="availableModels" name="availableModels">
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="lblSubModelId">Model</label>
                            <input type="text" class="form-control" id="subModel_Description" placeholder="Eg. Executive" />
                        </div>
                        <div class="form-group">
                            <label for="lblPriceId">Price</label>
                            <input type="text" class="form-control" id="price" placeholder="Eg. R 200 000" />
                        </div>
                        <div class="form-group">
                            <label for="lblStockId">Stock</label>
                            <input type="text" class="form-control" id="stock" placeholder="Eg. 4" />
                        </div>
                    </form>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btnAdd" onclick="return InsertSubModel();">Add</button>
                    <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none" onclick="return UpdateSubModel();">Update</button>
                    <button type="button" class="btn btn-default" id="btnClose" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

</body>
     </html>